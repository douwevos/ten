module {

	name 'xantus';
	
	dependencies {
		module 'gtk3';
		module 'buzzard';
	}

	clear {
		remove '[%=module.builddir%]';
	}

	compile {
		cc {
			global.cc.args {}
			src { path './src/'; }  
			destdir './compiled/'; 
			depdir './deps/'; 
		}
		
	}

	package {
		ar { srcdir './compiled/'; destfile './libxantus.a'; }
	}	


	export {
		lib {
			path '.';
			libname 'xantus';
		}
		headers {
			dir './src/';
		}
	}


}
